{
    "name": "antidot-fw/react-dbal-adapter",
    "description": "React PHP DBAL adapter for Antidot Framework.",
    "keywords": [
        "psr-11",
        "DBAL"
    ],
    "type": "library",
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "kpicaza"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "drift/dbal": "^0.1.2",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "clue/reactphp-sqlite": "^1.1",
        "infection/infection": "^0.20",
        "phpro/grumphp": "^1.0",
        "phpunit/phpunit": "^8.0 || ^9.0",
        "react/mysql": "^0.5.4",
        "squizlabs/php_codesniffer": "^3.4",
        "symfony/var-dumper": "^5.1",
        "vimeo/psalm": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Antidot\\React\\DBAL\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AntidotTest\\React\\DBAL\\": "test"
        }
    },
    "scripts": {
        "check-all": [
            "@cs-check",
            "@psalm",
            "@test",
            "@infection"
        ],
        "cs-check": "phpcs src --colors",
        "cs-fix": "phpcbf src --colors",
        "infection": "XDEBUG_MODE=coverage infection",
        "psalm": "psalm",
        "test": "phpunit --colors=always"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laminas": {
            "config-provider": "Antidot\\React\\DBAL\\Container\\Config\\ConfigProvider"
        }
    }
}
